{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Agent (root)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}/cmd/agent",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true
        },
        {
            "name": "Classifier",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/classifier",
            "dlvFlags": [
                "--check-go-version=false"
            ],
            "env": {
                "KUBECONFIG": "${userHome}/.kube/config"
            },
            "args": [
                "-serviceCidr",
                "10.11.0.0/16"
            ]
        }
    ]
}